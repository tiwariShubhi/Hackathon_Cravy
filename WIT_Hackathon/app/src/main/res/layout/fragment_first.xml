<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/back"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".FirstFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="150dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    >

                    <ImageView
                        android:id="@+id/dish_image2"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"

                        android:adjustViewBounds="false"
                        android:background="@drawable/image1" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">
                <AutoCompleteTextView
                    android:id="@+id/atv_veggies"
                    android:layout_width="match_parent"
                    android:drawableLeft="@drawable/baseline_playlist_add_white_24dp"
                    android:textColor="@color/white"
                    android:layout_height="80dp"
                    android:completionHint="   Add veggies"
                    android:completionThreshold="1"
                    android:hint="   Add veggies"
                    android:textColorHint="@color/white"/>
                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/chip_group_veg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:alignContent="space_around"
                    app:alignItems="stretch"
                    app:flexWrap="wrap"
                    app:showDivider="beginning|middle|end">

                    <!--        <com.google.android.material.chip.ChipGroup-->
                    <!--            android:id="@+id/chip_group_veg"-->
                    <!--            android:layout_width="270dp"-->
                    <!--            android:layout_height="45dp"-->
                    <!--            android:layout_marginTop="80dp"-->
                    <!--            app:layout_constraintEnd_toEndOf="parent"-->
                    <!--            app:layout_constraintHorizontal_bias="0.787"-->
                    <!--            app:layout_constraintStart_toStartOf="parent"-->
                    <!--            app:layout_constraintTop_toTopOf="@+id/atv_veggies" />-->
                </com.google.android.flexbox.FlexboxLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="150dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    >

                    <ImageView
                        android:id="@+id/dish_image3"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"

                        android:adjustViewBounds="false"
                        android:background="@drawable/image3" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="3"
                android:layout_height="match_parent">
                <AutoCompleteTextView
                    android:textColor="@color/white"
                    android:id="@+id/atv_dairy"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="36dp"
                    android:drawableLeft="@drawable/baseline_playlist_add_white_24dp"
                    android:completionHint="Select Dairy"
                    android:completionThreshold="1"
                    android:hint="   Add dairy products"
                    android:textColorHint="@color/white"/>
                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/chip_group_dai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:alignContent="space_around"
                    app:alignItems="stretch"
                    app:flexWrap="wrap"
                    app:showDivider="beginning|middle|end"
                    tools:layout_editor_absoluteX="84dp">
                    <!--        <com.google.android.material.chip.ChipGroup-->
                    <!--            android:id="@+id/chip_group_veg"-->
                    <!--            android:layout_width="270dp"-->
                    <!--            android:layout_height="45dp"-->
                    <!--            android:layout_marginTop="80dp"-->
                    <!--            app:layout_constraintEnd_toEndOf="parent"-->
                    <!--            app:layout_constraintHorizontal_bias="0.787"-->
                    <!--            app:layout_constraintStart_toStartOf="parent"-->
                    <!--            app:layout_constraintTop_toTopOf="@+id/atv_veggies" />-->
                </com.google.android.flexbox.FlexboxLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="150dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    >

                <ImageView
                    android:id="@+id/dish_image6"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"

                    android:adjustViewBounds="false"
                    android:background="@drawable/pulses" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="3"
                android:layout_height="match_parent">
                <AutoCompleteTextView
                    android:textColor="@color/white"
                    android:id="@+id/atv_pulses"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="32dp"
                    android:drawableLeft="@drawable/baseline_playlist_add_white_24dp"
                    android:completionHint="   Add pulses"
                    android:completionThreshold="1"
                    android:hint="   Add pulses"
                    android:textColorHint="@color/white"
                    app:layout_constraintStart_toEndOf="@+id/textView5"
                    app:layout_constraintTop_toBottomOf="@+id/chip_group_cer" />
                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/chip_group_pul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:alignContent="space_around"
                    app:alignItems="stretch"
                    app:flexWrap="wrap"
                    app:showDivider="beginning|middle|end"
                    tools:layout_editor_absoluteX="84dp">
                    <!--        <com.google.android.material.chip.ChipGroup-->
                    <!--            android:id="@+id/chip_group_veg"-->
                    <!--            android:layout_width="270dp"-->
                    <!--            android:layout_height="45dp"-->
                    <!--            android:layout_marginTop="80dp"-->
                    <!--            app:layout_constraintEnd_toEndOf="parent"-->
                    <!--            app:layout_constraintHorizontal_bias="0.787"-->
                    <!--            app:layout_constraintStart_toStartOf="parent"-->
                    <!--            app:layout_constraintTop_toTopOf="@+id/atv_veggies" />-->
                </com.google.android.flexbox.FlexboxLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="150dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    >

                    <ImageView
                        android:id="@+id/dish_image"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/cereals2" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="3"
                android:layout_height="match_parent">
                <AutoCompleteTextView
                    android:textColor="@color/white"
                    android:id="@+id/atv_cereals"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginRight="24dp"
                    android:drawableLeft="@drawable/baseline_playlist_add_white_24dp"
                    android:completionHint="   Add cereals"
                    android:completionThreshold="1"
                    android:hint="   Add cereals"
                    android:textColorHint="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.636"
                    app:layout_constraintStart_toEndOf="@+id/textView2"
                    app:layout_constraintTop_toBottomOf="@+id/chip_group_veg" />
                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/chip_group_cer"
                    android:layout_width="306dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="4dp"
                    app:alignContent="space_around"
                    app:alignItems="stretch"
                    app:flexWrap="wrap"
                    app:layout_constraintTop_toBottomOf="@+id/atv_cereals"
                    app:showDivider="beginning|middle|end"
                    tools:layout_editor_absoluteX="84dp">

                    <!--        <com.google.android.material.chip.ChipGroup-->
                    <!--            android:id="@+id/chip_group_veg"-->
                    <!--            android:layout_width="270dp"-->
                    <!--            android:layout_height="45dp"-->
                    <!--            android:layout_marginTop="80dp"-->
                    <!--            app:layout_constraintEnd_toEndOf="parent"-->
                    <!--            app:layout_constraintHorizontal_bias="0.787"-->
                    <!--            app:layout_constraintStart_toStartOf="parent"-->
                    <!--            app:layout_constraintTop_toTopOf="@+id/atv_veggies" />-->
                </com.google.android.flexbox.FlexboxLayout>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/bt_submit"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:text="Search" />
        <TextView
            android:id="@+id/tv_display"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:hint="Final"
            app:layout_constraintTop_toBottomOf="@+id/bt_submit"
            tools:layout_editor_absoluteX="0dp" />
    </LinearLayout>
</ScrollView>